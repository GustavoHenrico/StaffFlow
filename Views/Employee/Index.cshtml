@model IEnumerable<StaffFlow.Models.Employee>

@{
    ViewData["Title"] = "Employee";
}

<div class="d-flex text-center justify-content-between">
    <h1 class="text-xl-start">Employee</h1>
    <div class="my-auto">
        <a href="/Employee/Create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="container mt-4">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Department</td>
                    <td>
                        <a href="/Employee/Edit/@employee.Id" class="btn btn-sm btn-secondary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <a href="/Employee/Delete/@employee.Id" class="btn btn-sm btn-danger" title="Remove"
                            onclick="return confirm('Are you sure you want to remove this employee?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
