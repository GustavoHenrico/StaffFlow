@model Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div>
    <h1 class="text-xl-start">Edit Employee</h1>
    <form method="post">

        <div class="d-none form-group">
            <label for="id">Id</label>
            <input disabled type="text" class="form-control" id="id" name="id" placeholder="Enter Id" value="@Model.Id">
        </div>

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="Name" placeholder="Enter name" value="@Model.Name">
        </div>

        <div class="form-group mt-3">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="Email" placeholder="Enter email"
                value="@Model.Email">
        </div>

        <div class="form-group mt-3">
            <label for="department">Department</label>
            <input type="text" class="form-control" id="department" name="Department" placeholder="Enter department"
                value="@Model.Department">
        </div>

        <div class="d-flex align-items-end justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
