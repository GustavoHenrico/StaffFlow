@model IEnumerable<StaffFlow.Models.Manager>

@{
    ViewData["Title"] = "Manager";
}

<div class="d-flex text-center justify-content-between">
    <h1 class="text-xl-start">Manager</h1>
    <div class="my-auto">
        <a href="/Manager/Create" class="btn btn-primary">Create</a>
    </div>
</div>

<div class="container mt-4">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manager in Model)
            {
                <tr>
                    <td>@manager.Id</td>
                    <td>@manager.Name</td>
                    <td>@manager.Email</td>
                    <td>@manager.Department</td>
                    <td>
                        <a href="/Manager/Edit/@manager.Id" class="btn btn-sm btn-secondary" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <a href="/Manager/Delete/@manager.Id" class="btn btn-sm btn-danger" title="Remove"
                            onclick="return confirm('Are you sure you want to remove this manager?');">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
